<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <payment>
            <groups>
                <zipmoney translate="label" module="zipmoneypayment">
                    <label>Zip - Own it now, pay later</label>
                    <sort_order>670</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <frontend_class>complex</frontend_class>
                    <fields>
                        <zipmoneypayment type="group" translate="label">
                            <label>Global Settings</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                            <fields>
                                <version translate="label">
                                    <label>Version</label>
                                    <frontend_type>label</frontend_type>                                    
                                    <frontend_model>zipmoneypayment/version</frontend_model>
                                    <sort_order>10</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </version> 
                                <active translate="label">
                                    <label>Enabled</label>
                                    <tooltip>Set to 'Yes' to enable zipMoney as a secure payment method on your website</tooltip>
                                    <frontend_type>select</frontend_type>
                                    <source_model>adminhtml/system_config_source_yesno</source_model>
                                    <sort_order>20</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </active>
                                <title translate="label">
                                    <label>Title</label>
                                    <tooltip>Payment Method Title</tooltip>
                                    <frontend_type>text</frontend_type>
                                    <sort_order>30</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                </title>
                                <private_key translate="label">
                                    <label>Private Key</label>
                                    <tooltip>Enter the zipMoney Merchant Private provided to you on setup of your Merchant Account. Note: may be different for 'Test' or 'Live' environment</tooltip>
                                    <frontend_type>text</frontend_type>
                                    <sort_order>40</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                </private_key>
                                <public_key>
                                    <label>Public Key</label>
                                    <tooltip>Enter the zipMoney Merchant Public  Key provided to you on setup of your Merchant Account. Note: may be different for 'Sandbox' or 'Live' environment</tooltip>
                                    <frontend_type>text</frontend_type>
                                    <sort_order>50</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                </public_key>
                                <environment translate="label">
                                    <label>Environment</label>
                                    <tooltip>Set to 'Live' to start accepting zipMoney payments on your website. Ensure your zipMoney ID and zipMoney Key are your 'Live' credentials if not in 'Test' mode</tooltip>
                                    <frontend_type>select</frontend_type>
                                    <source_model>zipmoneypayment/source_environment</source_model>
                                    <sort_order>60</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                </environment>
                                <payment_mode translate="label">
                                    <label>Capture Mode</label>
                                    <tooltip></tooltip>
                                    <frontend_type>select</frontend_type>
                                    <source_model>zipmoneypayment/source_paymentMode</source_model>
                                    <sort_order>80</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                </payment_mode>
                                <log_setting translate="label">
                                    <label>Log Setting</label>
                                    <tooltip>Select 'All' to log everything, 'Default' to log info and 'None' to disabled loggin</tooltip>
                                    <source_model>zipmoneypayment/source_logSetting</source_model>
                                    <frontend_type>select</frontend_type>
                                    <sort_order>85</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>                                                
                                    <config_path>payment/zipmoneypayment/log_setting</config_path>
                                </log_setting>
                                <incontext_checkout translate="label">
                                    <label>In-Context Checkout</label>
                                    <tooltip> Enable Iframe checkout without redirecting to zipMoney </tooltip>
                                    <frontend_type>select</frontend_type>
                                    <source_model>adminhtml/system_config_source_yesno</source_model>
                                    <sort_order>90</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                </incontext_checkout>   
                                <minimum_total translate="label">
                                    <label>Minimum Order Value</label>
                                    <tooltip>The minimum order value amount required to checkout</tooltip>
                                    <frontend_type>text</frontend_type>
                                    <sort_order>100</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                    <frontend_class>validate-number</frontend_class>
                                </minimum_total>
                                <allowspecific translate="label">
                                    <label>Payment from Applicable Countries</label>
                                    <frontend_type>allowspecific</frontend_type>
                                    <sort_order>120</sort_order>
                                    <source_model>adminhtml/system_config_source_payment_allspecificcountries</source_model>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                </allowspecific>
                                <specificcountry translate="label">
                                    <label>Payment from Specific Countries</label>
                                    <frontend_type>multiselect</frontend_type>
                                    <sort_order>122</sort_order>
                                    <source_model>adminhtml/system_config_source_country</source_model>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>0</show_in_store>
                                    <can_be_empty>1</can_be_empty>
                                </specificcountry>
                            </fields>
                        </zipmoneypayment>

                        <zipmoney_advert type="group" translate="label">
                            <label>Marketing Banners Widgets and Banners</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>40</sort_order>
                            <fields>
                                <zipmoney_advert_home_page type="group" translate="label">
                                    <label>Home Page</label>
                                    <frontend_type>text</frontend_type>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                    <sort_order>10</sort_order>
                                    <fields>
                                        <banner_active translate="label comment">
                                            <label>Display Strip Banner</label>
                                            <tooltip>Display zipMoney marketing banner and popup on home page to give customers more information and increase conversions</tooltip>
                                            <sort_order>11</sort_order>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </banner_active>
                                    </fields>
                                </zipmoney_advert_home_page>

                                <zipmoney_advert_product_page type="group" translate="label">
                                    <label>Product Page</label>
                                    <frontend_type>text</frontend_type>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                    <sort_order>20</sort_order>
                                    <fields>
                                        <widget_active translate="label comment">
                                            <label>Display Widget</label>
                                            <tooltip>Display zipMoney marketing widget and popup on product pages to give customers more information and increase conversions</tooltip>
                                            <sort_order>12</sort_order>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </widget_active>
                                        <banner_active translate="label comment">
                                            <label>Display Strip Banner</label>
                                            <tooltip>Display zipMoney marketing banner and popup on product pages to give customers more information and increase conversions</tooltip>
                                            <sort_order>10</sort_order>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </banner_active>
                                        <tagline_active translate="label">
                                            <label>Display Tagline</label>
                                            <tooltip>Display the Tagline</tooltip>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <sort_order>21</sort_order>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </tagline_active>
                                    </fields>
                                </zipmoney_advert_product_page>

                                <zipmoney_advert_category_page type="group" translate="label">
                                    <label>Category Page</label>
                                    <frontend_type>text</frontend_type>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                    <sort_order>30</sort_order>
                                    <fields>
                                        <banner_active translate="label comment">
                                            <label>Display Strip Banner</label>
                                            <tooltip>Display zipMoney marketing banner and popup on category pages to give customers more information and increase conversions</tooltip>
                                            <sort_order>10</sort_order>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </banner_active>
                                    </fields>
                                </zipmoney_advert_category_page>

                                <zipmoney_advert_cart_page type="group" translate="label">
                                    <label>Cart Page</label>
                                    <frontend_type>text</frontend_type>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                    <sort_order>40</sort_order>
                                    <fields>
                                        <widget_active translate="label comment">
                                            <label>Display Widget</label>
                                            <tooltip>Display zipMoney marketing widget and popup on the cart page to give customers more information and increase conversions</tooltip>
                                            <sort_order>11</sort_order>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </widget_active>
                                        <banner_active translate="label comment">
                                            <label>Display Strip Banner</label>
                                            <tooltip>Display zipMoney marketing banner and popup on cart pages to give customers more information and increase conversions</tooltip>
                                            <sort_order>10</sort_order>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </banner_active>
                                        <tagline_active translate="label">
                                            <label>Display Tagline</label>
                                            <tooltip>Display the Tagline</tooltip>
                                            <frontend_type>select</frontend_type>
                                            <source_model>adminhtml/system_config_source_yesno</source_model>
                                            <sort_order>22</sort_order>
                                            <show_in_default>1</show_in_default>
                                            <show_in_website>1</show_in_website>
                                            <show_in_store>1</show_in_store>
                                        </tagline_active>
                                    </fields>
                                </zipmoney_advert_cart_page>
                            </fields>
                        </zipmoney_advert>
                    </fields>
                </zipmoney>
            </groups>
        </payment>
    </sections>
</config>