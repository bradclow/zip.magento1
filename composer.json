{
    "name": "zip-payment-magento-1-extension",
    "description": "Zip Payment Extension for Magento 1",
    "version": "2.1.0",
    "scripts": {
        "docker": "sh ./build/docker/shell/build.sh magento",
        "deploy:package": "sh ./build/shell/deploy-package.sh",
        "deploy:post": "sh ./build/shell/post-deploy.sh",
        "test:unit": "php ./vendor/phpunit/phpunit/phpunit --bootstrap vendor/autoload.php ./test/Test.php",
        "lint": "sh ./vendor/bin/phpcs",
        "lint:fix": "sh ./vendor/bin/phpcbf",
        "post-install": [
            "sh ./build/shell/post-install.sh"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "7",
        "squizlabs/php_codesniffer": "^3.4",
        "magento/marketplace-eqp": "dev-master"
    },
    "extra": {
        "exclude": [
            "phpcs.xml"
        ]
    },
    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/magento/marketplace-eqp.git"
    }]
}
